                                    <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Görev</th>
                                    <th scope="col">Durum</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var item in Model.ProjectTasks)
                                    {
                                    TaskLength++;
                                    TaskIdString = "control-mission" + TaskLength.ToString();
