                                                {

                                                    <a href="/proje-detaylari/dokuman-kaldir/@item.Id" class="download-icon ml-4" data-dz-remove="">
                                                        <i class="glyph-icon simple-icon-trash"></i>
                                                    </a>
                                                }
                                            </div>
                                        }

                                    }
                                    else
                                    {
                                        <h4>Henüz projeye ait bir dosya yüklenmemiş..</h4>
                                    }
                                }

                                <form asp-action="UpdateDocuments" asp-controller="Home" method="post" enctype="multipart/form-data" data-pasley-validate>
                                    <input type="text" asp-for="Project.Id" value="@Model.Project.Id" hidden />
                                    <div class="d-flex flex-row mb-3">
                                        <div class="col-12">
                                            <div class="input-group mb-3 file-avatar">
                                                <label class="custom-select custom-select-label file-new-uploads-text" for="file-upload" style="height:auto; line-height:inherit;"></label>
                                                <input type="file" class="d-none file-new-uploads" name="file-upload" id="file-upload" multiple>
                                                <div class="input-group-append">
                                                    <label class="input-group-text" for="file-upload" value="Fotoğraf Yükle">Dosya Yükle</label>
                                                </div>
                                            </div>
                                            <div class="text-zero top-right-button-container">
                                                <button type="submit" class="btn btn-primary top-right-button mr-1">Yeni Dosya Ekle</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                            <div class="tab-pane fade" id="third" role="tabpanel" aria-labelledby="third-tab">
                                <div class="row">
                                    <div class="col-8">
                                        <p class="font-weight-bold">Proje Açıklaması</p>
                                    </div>
                                    @if (User.IsInRole(UserRoles.Admin))
                                    {
                                        <div class="col-4 text-right">
                                            <button data-toggle="modal" data-target="#project-details" class="btn btn-primary btn-sm mb-0">Projeyi Düzenle</button>
                                        </div>
                                    }
                                </div><div id="desc">@Html.Raw(Model.Project.Description)</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-12 col-xl-4 col-right">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-8 p-0 m-0 d-flex justify-content-center align-items-center">
                                <h1 class="p-0 m-0">@Model.Project.Customers.Name</h1>
                            </div>
                            <div class="col-4">
                                <img src="/assets/customers/@Model.Project.Customers.Id/img/@Model.Project.Customers.ImageUrl" alt="@Model.Project.Customers.Name" class="list-thumbnail responsive border-0 card-img-left ml-2" />
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-6 p-0 m-0 text-center">
                                <p class="text-muted text-small mb-2">Proje Statüsü</p>
                                <p class="mb-3">
                                    @if (Model.Project.Status == 0)
                                    {
                                        <span class="badge badge-pill badge-info mb-1">YENİ</span>
                                    }
                                    @if (Model.Project.Status == 1)
                                    {
                                        <span class="badge badge-pill badge-warning mb-1">YAPIM AŞAMASINDA</span>
                                    }
                                    @if (Model.Project.Status == 2)
                                    {
                                        <span class="badge badge-pill badge-secondary mb-1">MÜŞTERİ ONAYINDA</span>
                                    }
                                    @if (Model.Project.Status == 3)
                                    {
                                        <span class="badge badge-pill badge-primary mb-1">TAMAMLANDI</span>
                                    }
                                    @if (Model.Project.Status == 4)
                                    {
                                        <span class="badge badge-pill badge-primary" style="background-color: #008aff !important;"><i class="fas fa-archive"></i>&nbsp;&nbsp;ARŞİVLENMİŞ</span>
                                    }



                                    @*<span class="badge badge-pill badge-warning mb-1">YAPIM AŞAMASINDA</span>*@
                                </p>
                            </div>
                            <div class="col-3 p-0 m-0  text-center">
                                <p class="text-muted text-small mb-2">Proje Başlangıç</p>
                                <p class="mb-3">
                                    <span class="badge badge-pill badge-info mb-1">@Model.Project.CreationDate</span>
                                </p>
                            </div>
                            <div class="col-3 p-0 m-0  text-center">
                                <p class="text-muted text-small mb-2">Proje Deadline</p>
                                <p class="mb-3">
                                    <span class="badge badge-pill badge-danger mb-1">@Model.Project.EndingDate</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-body text-center pt-5 pb-5">
                        @foreach (var item in Model.Users)
                        {
                            string img = item.ImageUrl;
                            <img alt="@item.FullName" class="img-thumbnail border-0 rounded-circle mb-4 list-thumbnail mx-auto" src="@img" title="@item.FullName">
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Modal Proje Detay Değiştir -->
<div class="modal fade" id="project-details" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="project-detailsLabel">@Model.Project.Customers.Name - @Model.Project.Name</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Proje Adı:</label>
                        <input id="projectname" type="text" class="form-control" id="recipient-name" value="@Model.Project.Name">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Açıklama:</label>
                        <div class="input-group">
                            <div id="quillEditor" style="min-height: 10rem; width: 100%">
                                <div class="ql-editor">@Html.Raw(Model.Project.Description)</div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Proje Bitiş Tarihi:</label>
                        <input id="dateval" class="form-control datepicker" placeholder="" autocomplete="off" value="@Model.Project.EndingDate" required />
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Proje Üyeleri:</label>
                        <select class="form-control select2-multiple" multiple="multiple" data-width="100%" asp-for="UserId" id="userid" required>
                            @foreach (var item in Model.DepartmentsVMs)
                            {
                                <optgroup label="@item.Name">
                                    @foreach (var itemUser in item.Users)
                                    {
                                        if (itemUser.IsResponsible)
                                        {
                                            <option value="@itemUser.Id" selected>@itemUser.FirstName</option>
                                        }
                                        else
                                        {
                                            <option value="@itemUser.Id">@itemUser.FirstName</option>
                                        }
                                    }
                                </optgroup>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"
                            data-dismiss="modal">
                        Kapat
                    </button>
                    <button type="button" class="btn btn-primary" id="submitDesc">Değişiklikleri Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="add-mission" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Görev Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="AddTask" asp-controller="Home" method="post" asp-route-ProjectsId="@Model.Project.Id">
