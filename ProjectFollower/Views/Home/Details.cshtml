                                                    {
                                                        <label class="custom-control-label" for="@item.Id">Tamamlandı</label>
                                                    }
                                                    else
                                                    {
                                                        <label class="custom-control-label" for="@item.Id">Tamamlanmadı</label>
                                                    }

                                                </div>

                                                @*<a type="button" href="/proje-detaylari/gorev-kaldir/@item.Id" class="glyph-icon simple-icon-trash ml-4 remove-task" style="font-size: 16px; text-align: right;" id="@item.Id"></a>*@
                                                <a type="button" class="glyph-icon simple-icon-trash ml-4 remove-task" style="font-size: 16px; text-align: right;" id="@item.Id"></a>
                                            </div>
                                        </div>

                                    }
