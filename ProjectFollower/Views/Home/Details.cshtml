                                    </div>
                                    <div class="col-3">
                                        <p class="font-weight-bold" style="text-align:end">Görevliler</p>
                                    </div>
                                </div>


                                @*<form action="/proje-detaylari/gorev-degistir/@Model.Project.Id" method="get">*@
                                <form id="sectionTasks">
                                    @foreach (var item in Model.ProjectTasks)
