                                            <button class="btn btn-secondary" type="button" id="comment-button">
                                                <span class="d-inline-block">Paylaş</span> <i class="simple-icon-arrow-right ml-2"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="second" role="tabpanel" aria-labelledby="second-tab">
