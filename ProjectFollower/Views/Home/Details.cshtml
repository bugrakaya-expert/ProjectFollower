                                <div class="separator mb-5"></div>

                                <p class="font-weight-bold">Yorumlar</p>
                                <div class="scroll dashboard-list-with-user" id="comments">

                                    @if (Model.CommentVM.Count() > 0)
                                    {
                                        @foreach (var item in Model.CommentVM)
                                        {
                                            <div class="d-flex flex-row mb-3 border-bottom justify-content-between">
                                                <a href="#">
                                                    <img src="@item.Img" alt="@item.FullName"
                                                         class="img-thumbnail border-0 rounded-circle list-thumbnail align-self-center xsmall" />
                                                </a>
                                                <div class="pl-3 flex-grow-1">
                                                    <p class="font-weight-medium mb-0">@item.FullName</p>
                                                    <p class="text-muted mb-0 text-small">@item.CommentTime</p>
                                                    <p class="mt-3">
                                                        @item.Comment
                                                    </p>
                                                </div>
                                                @if (item.UserEmail == User.Identity.Name || User.IsInRole(UserRoles.Admin))
                                                {
                                                    <div class="dropleft">
                                                        <div class="glyph-icon simple-icon-options" type="button"
                                                             data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></div>
                                                        <div class="dropdown-menu">
