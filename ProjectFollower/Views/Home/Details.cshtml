                                        TaskIdString = "control-mission" + TaskLength.ToString();

                                        <div class="row mb-4  d-flex align-items-center justify-content-end">
                                            <div class="col-6">
                                                @if (item.Done)
                                                {
                                                    <p class="mission-completed m-0">@item.Description</p>
                                                }
                                                else
                                                {
                                                    <p class="m-0">@item.Description</p>
                                                }

                                            </div>

                                            <div class="col-3 d-flex align-items-center justify-content-end">
                                                <p class="m-0">
                                                    @foreach (var playerItem in item.TaskPlayers)
                                                    {
                                                        if (item.TaskPlayers.Count() == playercount + 1)
                                                        {
                                                            <span>@playerItem.FirstName</span>
                                                        }
                                                        else
                                                        {
                                                            <span>@playerItem.FirstName</span>

                                                            <text>,</text>
                                                        }
                                                        playercount++;
                                                    }
                                                </p>


                                            </div>


                                            <div class="col-3 text-end d-flex justify-content-center align-items-center">
                                                <div class="custom-control custom-checkbox" style="display:inline-block">
                                                    @*<input value="@item.Done.ToString()" id="@item.Id" type="text" class="taskvalue" />*@

