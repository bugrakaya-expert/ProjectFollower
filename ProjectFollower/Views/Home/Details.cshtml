                    <div class="form-group">
                        @if (User.IsInRole(UserRoles.Admin))
                        {
                            <label class="form-group has-top-label gorev-players pb-1">
                                <select class="form-control select2-multiple" multiple="multiple" data-width="100%" id="mission-players" asp-for="UserId" required>
                                    <optgroup label="Görev Üyeleri">
                                        @foreach (var item in Model.Users)
                                        {

                                            <option value="@item.Id">@item.FirstName</option>

